{
  "description": "Prompt a language model to generate text",
  "label": "Prompt",
  "category": "AI",
  "icon": {
    "name": "AIModelIcon",
    "color": "Pink"
  },
  "options": [
    {
      "info": "Select a model",
      "name": "model",
      "label": "Model",
      "meta": {
        "type": "Select",
        "default": "gpt-4",
        "validations": {
          "required": true
        },
        "values": [
          {
            "label": "GPT 3.5 turbo",
            "value": "gpt-3.5-turbo"
          },
          {
            "label": "GPT 3.5 turbo 16k",
            "value": "gpt-3.5-turbo-16k"
          },
          {
            "label": "GPT 4",
            "value": "gpt-4"
          },
          {
            "label": "GPT 4 turbo preview",
            "value": "gpt-4-1106-preview"
          }
        ]
      }
    },
    {
      "meta": {
        "type": "Text",
        "validations": {
          "required": true
        }
      },
      "name": "apiKey",
      "label": "API Key",
      "info": "Enter the API key for accessing the model"
    },
    {
      "name": "prompt",
      "label": "Prompt",
      "info": "Write your prompt for the model here",
      "meta": {
        "type": "MultilineText",
        "default": "Write a story about Apples",
        "validations": {
          "required": true
        }
      }
    },
    {
      "name": "variables",
      "label": "Variables",
      "info": "Define variables to be used in the prompt",
      "meta": {
        "type": "Map"
      }
    },
    {
      "name": "maxTokens",
      "label": "Max New Tokens",
      "info": "Specify the maximum token limit for the generated response",
      "meta": {
        "type": "Number",
        "default": 1024
      }
    },
    {
      "name": "temperature",
      "label": "Temperature",
      "info": "Set the creativity level for the response (0 is most predictable, 100 is most random)",
      "meta": {
        "type": "Number",
        "default": 20,
        "validations": {
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "name": "result",
      "label": "Result",
      "meta": {
        "type": "Output",
        "output": {
          "type": "Text"
        }
      }
    }
  ],
  "yields": "NONE"
}
