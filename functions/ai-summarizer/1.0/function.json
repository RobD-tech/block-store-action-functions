        "type": "Text",
        "validations": {
          "required": true
        }
      }
    },
    {
      "name": "maxTokens",
      "label": "Max New Tokens",
      "info": "Specify the maximum token limit for the generated response",
      "meta": {
        "type": "Number",
        "default": 1024
      }
    },
    {
      "name": "result",
      "label": "Result",
      "meta": {
        "type": "Output",
        "validations": {
          "required": true
        },
        "output": {
          "type": "Text"
        }
      }
