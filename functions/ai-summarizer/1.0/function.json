      "meta": {
        "type": "Select",
        "default": "gpt-4",
        "validations": {
          "required": true
        },
        "values": [
          {
            "label": "GPT 3.5 turbo",
            "value": "gpt-3.5-turbo"
          },
          {
            "label": "GPT 3.5 turbo 16k",
            "value": "gpt-3.5-turbo-16k"
          },
          {
            "label": "GPT 4",
            "value": "gpt-4"
          },
          {
            "label": "GPT 4 turbo preview",
            "value": "gpt-4-1106-preview"
          }
        ]
      }
    },
    {
      "meta": {
        "type": "Text",
        "validations": {
          "required": true
        }
      },
      "name": "apiKey",
      "label": "API Key",
      "info": "Enter the API key for accessing the model"
